{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": [
      "ES2022",
      "dom" 
    ],

    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "resolveJsonModule": true,
    
    /* Emit */
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}